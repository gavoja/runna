{
  "name": "runna",
  "version": "0.3.1",
  "description": "Runna - process based task runner for Node",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavoja/runna.git"
  },
  "keywords": [
    "node",
    "npm",
    "process",
    "task",
    "runner"
  ],
  "author": "Michal Kochel",
  "license": "MIT",
  "bin": {
    "runna": "./bin/runna"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "micromatch": "^2.3.11",
    "minimist": "^1.2.0",
    "simple-watcher": "^3.0.0"
  },
  "devDependencies": {
    "runna-webserver": "^0.1.1"
  },
  "scripts": {
    "build:css": "node ./test/tester.js build:css:$FLV 1000",
    "build:js": "node ./test/tester.js build:js:$FLV 1500",
    "build:html": "node ./test/tester.js build:html 100",
    "copy:assets": "node test/tester.js copy:assets:$FLV 300",
    "server": "runna-webserver -w test",
    "server:stop": "runna-webserver -x",
    "server:reload": "runna-webserver -r",
    "test": "node ./test/tester.js test 2000",
    "watch": "node index.js watch -f proj1,proj2"
  },
  "runna": {
    "foo": "+server build:js -server:reload",
    "watch": "+server build:html build:css build:js copy:assets -server:reload",
    "build": "build:css:dist build:js:dist copy:assets -foo",
    "test": "+server build.css.dist build:js:test copy:assets -test -server:stop",
    "build:js": {
      "chain": "build:js -server:reload",
      "watch": [
        "test/base/js/**/*.js",
        "test/$FLV/js/**/*.js"
      ]
    },
    "build:css": {
      "chain": "build:css -server:reload",
      "watch": [
        "test/$FLV/css/**/*.styl"
      ]
    },
    "copy:assets": {
      "chain": "copy:assets -server:reload",
      "watch": [
        "test/$FLV/static/**/*"
      ]
    },
    "build:html": {
      "chain": "build:html -server:reload",
      "watch": [
        "test/**/*.html"
      ]
    }
  }
}
