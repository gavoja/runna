{
  "name": "runna",
  "version": "1.4.0",
  "description": "Runna - process based task runner for Node",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavoja/runna.git"
  },
  "keywords": [
    "node",
    "npm",
    "process",
    "task",
    "runner"
  ],
  "author": "Michal Kochel",
  "license": "MIT",
  "bin": {
    "runna": "./bin/runna"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "micromatch": "^3.1.5",
    "minimist": "^1.2.0",
    "simple-watcher": "^3.0.0"
  },
  "devDependencies": {
    "runna-webserver": "^0.1.1"
  },
  "scripts": {
    "clean": "node ./test/tester.js --name clean --delay 500",
    "build:css": "node ./test/tester.js --name build:css --delay 400 --flavors $FLV",
    "build:js": "node ./test/tester.js --name build:js --delay 300 --flavors $FLV",
    "build:html": "node ./test/tester.js --name build:html --delay 100",
    "copy:assets": "node test/tester.js --name copy:assets --delay 200",
    "break:log": "node test/tester.js --error-log",
    "break:throw": "node test/tester.js --error-throw",
    "break:exit": "node test/tester.js --error-exit",
    "serve": "runna-webserver -w test",
    "serve:stop": "runna-webserver -x",
    "serve:reload": "runna-webserver -r",
    "build": "node index.js \"clean - build:html build:css build:js\" -f proj1,proj2",
    "build:break:log": "node index.js \"clean - build:html build:css build:js break:log\" -f proj1,proj2",
    "build:break:throw": "node index.js \"clean - build:html build:css build:js break:throw\" -f proj1,proj2",
    "build:break:exit": "node index.js \"clean - build:html build:css build:js break:exit\" -f proj1,proj2",
    "dev": "node index.js \"+serve clean - build:html build:css build:js - serve:reload\" -w .. -f proj1,proj2"
  },
  "observe": {
    "build:js - serve:reload": [
      "runna/test/base/js/**/*.js",
      "runna/test/$FLV/js/**/*.js"
    ],
    "build:css - serve:reload": [
      "runna/test/$FLV/css/**/*.css"
    ],
    "build:html - serve:reload": [
      "runna/test/**/*.html"
    ]
  }
}
