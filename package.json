{
  "name": "runna",
  "version": "1.3.0",
  "description": "Runna - process based task runner for Node",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavoja/runna.git"
  },
  "keywords": [
    "node",
    "npm",
    "process",
    "task",
    "runner"
  ],
  "author": "Michal Kochel",
  "license": "MIT",
  "bin": {
    "runna": "./bin/runna"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "micromatch": "^3.1.5",
    "minimist": "^1.2.0",
    "simple-watcher": "^3.0.0"
  },
  "devDependencies": {
    "runna-webserver": "^0.1.1"
  },
  "scripts": {
    "build:css": "node ./test/tester.js build:css:$FLV 1000",
    "build:js": "node ./test/tester.js build:js:$FLV 1500",
    "build:html": "node ./test/tester.js build:html 100",
    "copy:assets": "node test/tester.js copy:assets:$FLV 300",
    "server": "runna-webserver -w test",
    "server:stop": "runna-webserver -x",
    "server:reload": "runna-webserver -r",
    "test": "node ./test/tester.js test 2000",
    "build": "node index.js \"build:html build:css build:js copy:assets\" -f",
    "build:12": "node index.js \"build:html build:css build:js copy:assets\" -f proj1,proj2",
    "build:3": "node index.js \"build:html build:css build:js copy:assets\" -f proj3",
    "build:4": "node index.js \"build:html build:css build:js copy:assets\" -f proj4",
    "dev": "node index.js \"+server build:html build:css build:js copy:assets -server:reload\" -w .. -f"
  },
  "observe": {
    "build:js -server:reload": [
      "test/base/js/**/*.js",
      "test/$FLV/js/**/*.js"
    ],
    "build:css -server:reload": [
      "test/$FLV/css/**/*.styl"
    ],
    "copy:assets -server:reload": [
      "test/$FLV/static/**/*"
    ],
    "build:html -server:reload": [
      "test/**/*.html"
    ]
  },
  "flavors": {
    "proj1": [],
    "proj2": [],
    "proj3": [],
    "proj4": []
  }
}
