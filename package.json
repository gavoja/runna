{
  "name": "runna",
  "version": "0.1.0",
  "description": "Runna - npm scripts task runner",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavoja/runna.git"
  },
  "keywords": [
    "node",
    "task",
    "runner"
  ],
  "author": "Michal Kochel",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "micromatch": "^2.3.11",
    "minimist": "^1.2.0",
    "simple-watcher": "^3.0.0"
  },
  "scripts": {
    "build:css": "node tester.js build:css 1000",
    "build:js": "node tester.js build:js 1200",
    "build:assets": "node tester.js build:assets 300",
    "server": "node ../runna-webserver/index.js -d",
    "server:stop": "node ../runna-webserver/index.js -x",
    "server:reload": "node ../runna-webserver/index.js -r",
    "test": "node tester.js test 2000"
  },
  "runna": {
    "foo": "+server build:css build:js -server:reload -server:stop",
    "bar": "server",
    "baz": "build:js",
    "develop": "+server build:css build:js copy:assets -server:reload",
    "test": "+server build.css.dist build:js:test copy:assets -test -server:stop",
    "dist": "build:css:dist build:js:dist copy:assets -foo",
    "build:js": {
      "chain": "build:js -server:reload",
      "watch": ["test/js/**/*.js"]
    },
    "build:css": {
      "chain": "build:css -server:reload",
      "watch": ["test/css/**/*.styl"]
    },
    "build:assets": {
      "chain": "build:assets -server:reload",
      "watch": ["test/static/**/*"]
    }
  }
}
